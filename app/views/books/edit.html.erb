 <%= form_with model:@book, local:true do |f| %>

 <div class="notifications">
  <div class="notice">Book was successfully created.</div>
</div>

  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <% end %>


  <%= link_to"Show","/books/#{@book.id}"%>
  <a class="back" href="/books">Back</a>